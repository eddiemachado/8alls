{
  "name": "@8alls/design-tokens",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run generate:tokens && tsc",
    "generate:tokens": "style-dictionary build --config style-dictionary.config.js",
    "generate:tokens:web": "style-dictionary build --config style-dictionary.config.js --platform css,js",
    "generate:tokens:ios": "style-dictionary build --config style-dictionary.config.js --platform ios",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "style-dictionary": "^4.4.0",
    "typescript": "^5.3.0"
  }
}
